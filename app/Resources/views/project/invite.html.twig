{% extends 'base.html.twig' %}

{% block title %}
    Inviting to a project
{% endblock %}

{% block breadcrumps %}
    <h4>Добавление участников в проект <strong>{{ project.Name }}</strong></h4>
{% endblock %}

{% block content %}

    <div>
        <div class="well">
            <h3>{{ project.Name }}</h3>
            {{ project.CreatedAt|date("jS F Y \\a\\t H:i") }}
            <p>{{ project.Description }}</p>
        </div>
    </div>


    <form action="{{ path("invite_to_project", {'id': id}) }}" method="post">

        {{ form_widget(form) }}

        <input type="submit" class="simple-button" value="Сохранить изменения" />
    </form>

{% endblock %}