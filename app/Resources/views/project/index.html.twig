{% extends 'base.html.twig' %}

{% block title %}
    Projects
{% endblock title %}

{% block additional_navbar_pills %}
    {% if is_granted('ROLE_MANAGER') %}
        <li><a href="{{ path("project_create") }}">Создать новый проект</a></li>
    {% endif %}
{% endblock additional_navbar_pills %}


{% block content %}
    <div>
        <div class="row">
            <div class="col-md-8">
                <h3>Ваши проекты</h3>
                {% for project in user_projects %}
                    <div class="well">
                        <a href="{{ path('project_show',{'id':project.id}) }}">{{ project.Name }}</a>
                        <span class="text-muted">{{ project.CreatedAt |date("jS F Y \\a\\t H:i") }}</span>
                        <p>{{ project.Description }}</p>
                    </div>{% else %}
                    Здесь будут отображаться ваши проекты.
                {% endfor %}
            </div>

            <div class="col-md-4">
                <h3>Latest updates</h3>
                <span class="text-muted">Render latest events in all user's projects.</span>
            </div>

        </div>

        <div class="row">

            <div class="col-xs-12">
                <h3>Все проекты</h3>
                <div class="row">
                    {% for project in projects %}
                        <div class="col-md-4">
                            <div class="well">
                                <a href="{{ path('project_show',{'id':project.id}) }}">{{ project.Name }}</a>
                                <span class="text-muted">{{ project.CreatedAt |date("jS F Y \\a\\t H:i") }}</span>
                                <p>{{ project.Description }}</p>
                            </div>
                        </div>
                    {% else %}
                        Здесь будут отображаться ваши проекты.
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

{% endblock content %}